{
  "compilerOptions": {
	"outDir": "out",
	"module": "commonjs",
	"noImplicitAny": true,
	"removeComments": true,
	"preserveConstEnums": true,
	"sourceMap": true,
	"strictNullChecks": true
  },
  "include": [
        "src/**/*", "cmd.ts"
    ],
  "exclude": [
	"node_modules",
	"**/*.spec.ts"
  ],
  "mocha.requires": [
	"ts-node/register"
   ],
}